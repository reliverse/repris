{
  "name": "@reliverse/repris",
  "version": "1.0.0",
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@eslint/js": "^9.25.1",
    "@reliverse/relidler-cfg": "^1.1.3",
    "@stylistic/eslint-plugin": "^4.2.0",
    "@total-typescript/ts-reset": "^0.6.1",
    "@types/node": "^22.15.2",
    "eslint": "^9.25.1",
    "eslint-plugin-no-relative-import-paths": "^1.6.1",
    "eslint-plugin-perfectionist": "^4.12.3",
    "knip": "^5.50.5",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.31.0"
  },
  "description": "@reliverse/repris is a modern, fast, and lightweight alternative to printj for printf-style string formatting in JavaScript and TypeScript.",
  "keywords": [
    "print",
    "sprintf",
    "printj",
    "string",
    "format",
    "printf",
    "vsprintf",
    "string-conversion",
    "string-formatter",
    "format-characters"
  ],
  "scripts": {
    "pub": "relidler",
    "dev": "bun examples/e-main.ts",
    "latest": "bun update --latest && bun check",
    "check": "tsc --noEmit && eslint --cache --fix . && biome check --fix --unsafe . && knip"
  },
  "type": "module"
}
